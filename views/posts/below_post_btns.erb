<% 
  post_id   = post[:_id]
  num_views = $views.count(post_id: post_id)
%>

<style>
.num_views {
  position: relative;
    top: 17px;
        /* left: 16px; */
    padding-left: 20px;
    padding-right: 20px;
}
</style>

<div class='above_post'>
  <a class='publish-btn-toggle publish-btn btn btn-raised btn-primary <%= "noDisplay" if post[:post_open].to_s == 'yes' %>'   data-toggle="tooltip" data-placement="top">לפרסם!</a>
  <a class='publish-btn-toggle unpublish-btn btn btn-raised btn-success <%= "noDisplay" if !(post[:post_open].to_s == 'yes') %>' data-toggle="tooltip" data-placement="top"><i class='fa fa-check'></i></a>
  
  <span style='padding-left:20px'><button class='btn btn-raised' onclick=$("#img_uploader").click()> <i class='fa fa-picture-o'></i></button></span>
  <% if num_views == 0 %>
  <span class='num_views rtl'><%=num_views%> צפיות</span>
  <% end %>
  <div class='saved-btn btn'></div>
</div>

<script>
$(document).ready(function() {
  $('.publish-btn-toggle').click(()=> { $('.publish-btn-toggle').toggleClass('noDisplay');});
  $('.publish-btn').click(()=> { $.post('/posts/<%=post_id%>',{post_open: 'yes'}) });
  $('.unpublish-btn').click(()=> { $.post('/posts/<%=post_id%>',{post_open: 'false'}) });
});   
</script>